pipeline {
    agent any
    tools {
        maven 'maven' // Use the Maven tool installed in Jenkins
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/NILAYRAVAL/wineApp.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package' // Use 'bat' for Windows
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test' // Use 'bat' for Windows
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying the Java application..."
            }
        }
    }
    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
